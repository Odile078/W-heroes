{{#partial "content"}}
    <section class="home">
        <div class="container">
            <div class="row">
                <div class="col-md 12">
                    <h2><a class="btn btn-primary" href="/squad-form">Create a New Squad</a></h2>
                </div>
            </div>
            <div class="row">
                <div col-md-12>
                    <h2 class="hero-title">Choose Squad Members</h2>
                </div>
            </div>
            <div class="row">

                    {{#each heroes}}
                        <div class=" col-md-6">

                            <div class="jumbotron detail-form">
                                <p>Name: {{name}}</p>
                                <p>Super power: {{ power }}</p>
                                <a class="btns btn btn-primary" href="/squad/new/{{id}}">Add To Squad</a>
                            </div>
                        </div>
                    {{/each}}

            </div>


            <div class="row">
                    <div class="col-md 12">
                         <h2 class="hero-title">{{#if squads}}AVAILABLE SQUADS</h2>
                    </div>
            </div>
            <div class="row">

                    {{#each squads}}
                        <div class="squad-cont col-md-6">
                            <img src="" alt="">
                            <div class="jumbotron detail-form">
                                <h1>{{ squadName }} </h1>
                                <button  class="btns float-right"> <a href="new/{{squadId}}">Squad Stats</a></button>
                                <p>Id: {{squadId}}</p>
                                <p>Purpose: {{cause}}</p>
                                <p>Max participants: {{ size }}</p>
                                <br><br>
                                <h3>MEMBERS</h3>
                                <button class="addMember add-btn" >Add New Member</button>
                                {{#each squadMembers}}
                                    <div class="member-cont">
                                        <h5>Name: {{this.name}}</h5>
                                        <h5>Power: {{power}}</h5>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <h2>Please create a squad to continue</h2>
                {{/if}}
            </div>
            <div class="row"></div>

        </div>




    </section>
{{/partial}}
{{#partial "footer"}}
    <script type="text/javascript" src="/js/jquery-3.4.0.min.js"></script>
    <script type="text/javascript" src="/js/script.js"></script>
{{/partial}}
{{> layout.hbs}}