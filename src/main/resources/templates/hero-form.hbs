{{#partial "content"}}
    <section class="home-form">
        <div class="container">
            <div class="jumbotron">
                <form class="form game-form" action="/new/hero" method="post">
                    <h1>Fill this form to register your Your Hero</h1>
                    <div class="form-group">
                        <input type="text" placeholder="Name" name="name" required class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="number" placeholder="Age" name="age" required class="form-control">

                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="special power" name="power" required class="form-control">

                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="Weakness" name="weakness" required class="form-control">

                    </div>

                    <input class="btn btn-primary" type="submit">
                </form>

            </div>
        </div>

    </section>
{{/partial}}
{{> layout.hbs}}